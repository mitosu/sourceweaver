{% extends 'base.html.twig' %}

{% block title %}Dashboard - IRONWHISPER{% endblock %}

{% block main_content %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Dashboard</h2>
    <div class="d-flex gap-2">
        <a href="{{ path('investigation_new') }}" class="btn btn-primary">
            <i class="bi bi-plus-circle me-1"></i>Nueva Investigación
        </a>
        <a href="{{ path('investigation_index') }}" class="btn btn-outline-secondary">
            <i class="bi bi-list-ul me-1"></i>Ver Todas
        </a>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <div class="d-flex justify-content-center align-items-center mb-2">
                    <div class="bg-primary bg-opacity-10 rounded-circle p-3">
                        <i class="bi bi-search text-primary fs-3"></i>
                    </div>
                </div>
                <h4 class="card-title">{{ stats.total_investigations }}</h4>
                <p class="card-text text-muted">Total Investigaciones</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <div class="d-flex justify-content-center align-items-center mb-2">
                    <div class="bg-success bg-opacity-10 rounded-circle p-3">
                        <i class="bi bi-play-circle text-success fs-3"></i>
                    </div>
                </div>
                <h4 class="card-title">{{ stats.active_investigations }}</h4>
                <p class="card-text text-muted">Activas</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <div class="d-flex justify-content-center align-items-center mb-2">
                    <div class="bg-info bg-opacity-10 rounded-circle p-3">
                        <i class="bi bi-check-circle text-info fs-3"></i>
                    </div>
                </div>
                <h4 class="card-title">{{ stats.completed_investigations }}</h4>
                <p class="card-text text-muted">Completadas</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <div class="d-flex justify-content-center align-items-center mb-2">
                    <div class="bg-warning bg-opacity-10 rounded-circle p-3">
                        <i class="bi bi-bullseye text-warning fs-3"></i>
                    </div>
                </div>
                <h4 class="card-title">{{ stats.total_targets }}</h4>
                <p class="card-text text-muted">Total Objetivos</p>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">Investigaciones Recientes</h5>
                <a href="{{ path('investigation_index') }}" class="btn btn-sm btn-outline-primary">Ver todas</a>
            </div>
            <div class="card-body">
                {% if recentInvestigations is not empty %}
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Nombre</th>
                                    <th>Estado</th>
                                    <th>Objetivos</th>
                                    <th>Fecha</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for investigation in recentInvestigations %}
                                    <tr>
                                        <td>
                                            <a href="{{ path('investigation_show', {id: investigation.id}) }}" class="text-decoration-none fw-bold">
                                                {{ investigation.name }}
                                            </a>
                                        </td>
                                        <td>
                                            {% if investigation.status == 'active' %}
                                                <span class="badge bg-success">Activa</span>
                                            {% elseif investigation.status == 'completed' %}
                                                <span class="badge bg-info">Completada</span>
                                            {% else %}
                                                <span class="badge bg-secondary">{{ investigation.status|title }}</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            <span class="badge bg-light text-dark">{{ investigation.targets|length }}</span>
                                        </td>
                                        <td class="text-muted">{{ investigation.createdAt|date('d/m/Y') }}</td>
                                        <td>
                                            <a href="{{ path('investigation_show', {id: investigation.id}) }}" class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    <div class="text-center py-4">
                        <i class="bi bi-search text-muted fs-1"></i>
                        <p class="text-muted mt-3">No tienes investigaciones aún</p>
                        <a href="{{ path('investigation_new') }}" class="btn btn-primary">
                            <i class="bi bi-plus-circle me-1"></i>Crear Primera Investigación
                        </a>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Actividad Reciente</h5>
            </div>
            <div class="card-body">
                {% if recentActivity is not empty %}
                    <div class="activity-timeline">
                        {% for activity in recentActivity %}
                            <div class="d-flex mb-3">
                                <div class="flex-shrink-0">
                                    <div class="bg-primary bg-opacity-10 rounded-circle p-2">
                                        <i class="bi bi-circle-fill text-primary" style="font-size: 0.5rem;"></i>
                                    </div>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <p class="mb-1 text-sm">{{ activity.action }}</p>
                                    <small class="text-muted">{{ activity.createdAt|date('d/m/Y H:i') }}</small>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% else %}
                    <div class="text-center py-4">
                        <i class="bi bi-clock-history text-muted fs-1"></i>
                        <p class="text-muted mt-3">Sin actividad reciente</p>
                    </div>
                {% endif %}
            </div>
        </div>

        <div class="card mt-4">
            <div class="card-header">
                <h5 class="card-title mb-0">Acceso Rápido</h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a href="{{ path('investigation_new') }}" class="btn btn-outline-primary">
                        <i class="bi bi-plus-circle me-2"></i>Nueva Investigación
                    </a>
                    <a href="{{ path('api_configuration_index') }}" class="btn btn-outline-secondary">
                        <i class="bi bi-cloud-upload me-2"></i>Configurar APIs
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}