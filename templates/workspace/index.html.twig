{% extends 'base.html.twig' %}

{% block title %}Workspaces - IRONWHISPER{% endblock %}

{% block main_content %}
<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="h3 mb-1">Mis Workspaces</h1>
                <p class="text-muted mb-0">{{ workspaces|length }} workspace(s) disponible(s)</p>
            </div>
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#newWorkspaceModal">
                <i class="bi bi-plus me-1"></i>Nuevo Workspace
            </button>
        </div>

        {% if workspaces is empty %}
            <div class="alert alert-info text-center">
                <i class="bi bi-person-workspace fs-1 text-muted"></i>
                <h5 class="mt-3">No tienes workspaces asignados</h5>
                <p class="mb-3">
                    Contacta con tu administrador para obtener acceso a un workspace.
                </p>
            </div>
        {% else %}
            <div class="row">
                {% for workspace in workspaces %}
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="card h-100">
                            <div class="card-body">
                                <div class="d-flex align-items-center mb-3">
                                    <div class="bg-primary bg-opacity-10 rounded-circle p-3 me-3">
                                        <i class="bi bi-folder2 text-primary fs-4"></i>
                                    </div>
                                    <div>
                                        <h5 class="card-title mb-1">{{ workspace.name }}</h5>
                                        <small class="text-muted">Workspace</small>
                                    </div>
                                </div>
                                
                                <p class="card-text text-muted small mb-3">
                                    Espacio de trabajo colaborativo para gestionar investigaciones y documentos de forma segura.
                                </p>

                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="text-muted small">
                                        <i class="bi bi-people me-1"></i>
                                        <span>Miembro</span>
                                    </div>
                                    <a href="{{ path('workspace_show', {id: workspace.id}) }}" class="btn btn-outline-primary btn-sm">
                                        <i class="bi bi-arrow-right me-1"></i>Acceder
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
</div>

<!-- Modal for New Workspace -->
<div class="modal fade" id="newWorkspaceModal" tabindex="-1" aria-labelledby="newWorkspaceModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            {{ form_start(form, {'action': path('workspace_new'), 'method': 'POST', 'attr': {'id': 'newWorkspaceForm'}}) }}
                <div class="modal-header">
                    <h5 class="modal-title" id="newWorkspaceModalLabel">
                        <i class="bi bi-plus-circle me-2"></i>Crear Nuevo Workspace
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        {{ form_label(form.name, 'Nombre del Workspace', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Ingresa un nombre para el workspace'}}) }}
                        <div class="form-text">
                            El nombre debe tener entre 3 y 255 caracteres.
                        </div>
                        {{ form_errors(form.name) }}
                    </div>
                    
                    <div class="alert alert-info d-flex align-items-center">
                        <i class="bi bi-info-circle me-2"></i>
                        <div>
                            <strong>Informaci칩n:</strong> Ser치s el propietario de este workspace y tendr치s acceso completo para gestionar investigaciones y miembros.
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="bi bi-x-circle me-1"></i>Cancelar
                    </button>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle me-1"></i>Crear Workspace
                    </button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>

<script>
// Reset form when modal is closed
document.getElementById('newWorkspaceModal').addEventListener('hidden.bs.modal', function () {
    document.getElementById('newWorkspaceForm').reset();
});

// Form validation
document.getElementById('newWorkspaceForm').addEventListener('submit', function(e) {
    const nameInput = document.getElementById('workspace_name');
    const name = nameInput.value.trim();
    
    if (name.length < 3) {
        e.preventDefault();
        alert('El nombre del workspace debe tener al menos 3 caracteres.');
        nameInput.focus();
        return;
    }
    
    if (name.length > 255) {
        e.preventDefault();
        alert('El nombre del workspace no puede tener m치s de 255 caracteres.');
        nameInput.focus();
        return;
    }
});
</script>
{% endblock %}
