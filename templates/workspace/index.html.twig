{% extends 'base.html.twig' %}

{% block title %}Workspaces - IRONWHISPER{% endblock %}

{% block main_content %}
<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="h3 mb-1">Mis Workspaces</h1>
                <p class="text-muted mb-0">{{ workspaces|length }} workspace(s) disponible(s)</p>
            </div>
        </div>

        {% if workspaces is empty %}
            <div class="alert alert-info text-center">
                <i class="bi bi-person-workspace fs-1 text-muted"></i>
                <h5 class="mt-3">No tienes workspaces asignados</h5>
                <p class="mb-3">
                    Contacta con tu administrador para obtener acceso a un workspace.
                </p>
            </div>
        {% else %}
            <div class="row">
                {% for workspace in workspaces %}
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="card h-100">
                            <div class="card-body">
                                <div class="d-flex align-items-center mb-3">
                                    <div class="bg-primary bg-opacity-10 rounded-circle p-3 me-3">
                                        <i class="bi bi-folder2 text-primary fs-4"></i>
                                    </div>
                                    <div>
                                        <h5 class="card-title mb-1">{{ workspace.name }}</h5>
                                        <small class="text-muted">Workspace</small>
                                    </div>
                                </div>
                                
                                <p class="card-text text-muted small mb-3">
                                    Espacio de trabajo colaborativo para gestionar investigaciones y documentos de forma segura.
                                </p>

                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="text-muted small">
                                        <i class="bi bi-people me-1"></i>
                                        <span>Miembro</span>
                                    </div>
                                    <a href="{{ path('workspace_show', {id: workspace.id}) }}" class="btn btn-outline-primary btn-sm">
                                        <i class="bi bi-arrow-right me-1"></i>Acceder
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}
