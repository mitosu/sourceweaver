<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}IRONWHISPER{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Sistema de gestión de documentos y soporte técnico">
    <meta name="author" content="IRONWHISPER">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Montserrat', sans-serif;
            background-color: #f8f9fa;
        }

        /* Sidebar fijo */
        .sidebar {
            width: 240px;
            background-color: #343a40;
            transition: width 0.3s ease;
            overflow-x: hidden;
            z-index: 1040;
        }

        /* Sidebar colapsado */
        .sidebar-collapsed .sidebar {
            width: 80px;
        }

        .sidebar a {
            color: #dee2e6;
            text-decoration: none;
        }

        .sidebar a:hover {
            color: #ffffff;
            background-color: #495057;
        }

        .sidebar-collapsed .sidebar-label,
        .sidebar-collapsed .sidebar-title {
            display: none;
        }

        /* Contenedor principal alineado con sidebar */
        #main-content {
            margin-left: 240px;
            transition: margin-left 0.3s ease;
        }

        .sidebar-collapsed #main-content {
            margin-left: 80px;
        }

        /* Topbar */
        header.navbar {
            position: sticky;
            top: 0;
            height: 60px;
            z-index: 1020;
            background-color: #fff;
            border-bottom: 1px solid #dee2e6;
            transition: all 0.3s ease;
        }

        /* Bordes rectos */
        .card, .btn, .form-control, .navbar, .modal-content, .alert {
            border-radius: 0 !important;
        }

        .nav-treeview {
            max-height: 0;
            overflow: hidden;
            transition: max-height 0.3s ease;
            padding-left: 1rem;
        }

        .nav-item.has-treeview > .nav-link {
            cursor: pointer;
        }

        .nav-item.has-treeview > .nav-link .toggle-icon {
            transition: transform 0.3s ease;
        }

        .nav-item.open > .nav-link .toggle-icon {
            transform: rotate(90deg);
        }

        .nav-item.open > .nav-treeview {
            max-height: 1000px;
        }

        .account-user-avatar {
            width: 32px;
            height: 32px;
            overflow: hidden;
            border-radius: 50%;
        }

        .sidebar-title {
            font-size: 1.25rem;
            font-weight: bold;
        }

        .sidebar-label {
            font-size: 0.875rem;
        }

        .toggle-icon {
            font-size: 0.875rem;
        }
        .sidebar .nav-item {
            margin-bottom: 0.5rem;
        }

        .sidebar-collapsed .nav-treeview {
            display: none !important;
            max-height: 0 !important;
            overflow: hidden;
            padding: 0 !important;
        }


    </style>

    {% block stylesheets %}{% endblock %}
</head>
<body>

{% block page_content %}
    {% include 'partials/_sidebar.html.twig' %}

    <div id="main-content">
        {% include 'partials/_topbar.html.twig' %}

        <main class="px-4 py-4">
            {{ block('main_content') }}
        </main>
    </div>
{% endblock %}

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
{% block javascripts %}
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const toggleBtn = document.getElementById('sidebarToggle');
        const body = document.body;

        toggleBtn?.addEventListener('click', function () {
            const collapsed = body.classList.toggle('sidebar-collapsed');

            // Al colapsar: cerrar todos los menús abiertos
            if (collapsed) {
                document.querySelectorAll('.nav-item.has-treeview.open').forEach(item => {
                    item.classList.remove('open');
                });
            }
        });

        // Submenús tipo treeview
        document.querySelectorAll('.nav-item.has-treeview > .nav-link').forEach(link => {
            link.addEventListener('click', function (e) {
                e.preventDefault();

                // No expandir submenús si el sidebar está colapsado
                if (document.body.classList.contains('sidebar-collapsed')) return;

                const parent = this.closest('.nav-item.has-treeview');
                parent.classList.toggle('open');
            });
        });
    });
</script>
{% endblock %}
</body>
</html>