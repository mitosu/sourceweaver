{% extends 'base.html.twig' %}

{% block title %}Editar Target - {{ investigation.name }} - IRONWHISPER{% endblock %}

{% block main_content %}
<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="h3 mb-1">Editar Target</h1>
                <p class="text-muted mb-0">
                    <i class="bi {{ target.typeIcon }} me-1"></i>{{ target.type|upper }}: {{ target.value }}
                </p>
            </div>
            <a href="{{ path('investigation_show', {id: investigation.id}) }}" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-1"></i>Volver a la investigación
            </a>
        </div>

        <div class="row">
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-body">
                        {{ form_start(form) }}
                        
                        <div class="row">
                            <div class="col-md-4">
                                {{ form_row(form.type) }}
                            </div>
                            <div class="col-md-8">
                                {{ form_row(form.value) }}
                            </div>
                        </div>
                        
                        {{ form_row(form.description) }}
                        
                        <hr class="my-4">
                        
                        <div class="mb-4">
                            <h6 class="mb-3">
                                <i class="bi bi-tools me-2"></i>Herramientas OSINT
                            </h6>
                            <div class="card bg-light">
                                <div class="card-body">
                                    <p class="text-muted small mb-3">
                                        Selecciona las herramientas OSINT que deseas usar para analizar este target.
                                    </p>
                                    {{ form_row(form.osintTools, {'label': false}) }}
                                    
                                    {% if target.osintTools|length > 0 %}
                                        <div class="mt-3">
                                            <small class="text-muted">
                                                <strong>Herramientas seleccionadas:</strong>
                                                {% for tool in target.osintTools %}
                                                    <span class="badge bg-secondary me-1">
                                                        {% if tool == 'virustotal' %} VirusTotal{% endif %}
                                                    </span>
                                                {% endfor %}
                                            </small>
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                        
                        <hr class="my-4">
                        
                        <div class="d-flex justify-content-end gap-2">
                            <a href="{{ path('investigation_show', {id: investigation.id}) }}" class="btn btn-secondary">Cancelar</a>
                            {{ form_widget(form.save, {'label': 'Actualizar target'}) }}
                        </div>
                        
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
            
            <div class="col-lg-4">
                <div class="card">
                    <div class="card-header">
                        <h6 class="card-title mb-0">
                            <i class="bi bi-clock-history me-1"></i>Información del target
                        </h6>
                    </div>
                    <div class="card-body">
                        <p class="small">
                            <strong>Creado:</strong> {{ target.createdAt|date('d/m/Y H:i') }}
                        </p>
                        <p class="small">
                            <strong>Estado:</strong> 
                            <span class="badge {{ target.statusBadgeClass }}">{{ target.status|title }}</span>
                        </p>
                        {% if target.lastAnalyzed %}
                            <p class="small">
                                <strong>Último análisis:</strong> {{ target.lastAnalyzed|date('d/m/Y H:i') }}
                            </p>
                        {% endif %}
                        <p class="small">
                            <strong>Resultados:</strong> {{ target.analysisResults|length }}
                        </p>
                    </div>
                </div>
                
                <div class="card mt-3">
                    <div class="card-header">
                        <h6 class="card-title mb-0 text-danger">
                            <i class="bi bi-exclamation-triangle me-1"></i>Zona de peligro
                        </h6>
                    </div>
                    <div class="card-body">
                        <p class="small text-muted">
                            Eliminar este target eliminará también todos sus análisis y resultados asociados.
                        </p>
                        <form method="post" 
                              action="{{ path('target_delete', {investigationId: investigation.id, id: target.id}) }}" 
                              onsubmit="return confirm('¿Estás seguro de eliminar este target? Esta acción no se puede deshacer.')">
                            <button type="submit" class="btn btn-danger btn-sm">
                                <i class="bi bi-trash me-1"></i>Eliminar target
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}