# OSINT Analysis API Configuration
# Copy this file to .env and fill in your actual values

# API Configuration
API_TITLE="OSINT Analysis API"
API_VERSION="1.0.0"
DEBUG=false
LOG_LEVEL="INFO"

# Server Configuration
HOST="0.0.0.0"
PORT=8001
WORKERS=1

# Analysis Configuration
DEFAULT_TIMEOUT=120
MAX_CONCURRENT_ANALYSES=10
ENABLE_ASYNC_ANALYSIS=true

# API Keys - KEEP THESE SECURE!
# VirusTotal API Key (Get from https://www.virustotal.com/gui/my-apikey)
VIRUSTOTAL_API_KEY="your_virustotal_api_key_here"

# AbuseIPDB API Key (Get from https://www.abuseipdb.com/api)
ABUSEIPDB_API_KEY="your_abuseipdb_api_key_here"

# URLVoid API Key (Get from https://www.urlvoid.com/api/)
URLVOID_API_KEY="your_urlvoid_api_key_here"
URLVOID_IDENTIFIER="your_urlvoid_identifier_here"

# Shodan API Key (Get from https://account.shodan.io/)
SHODAN_API_KEY="your_shodan_api_key_here"

# Google API Key (Get from https://console.developers.google.com/)
GOOGLE_API_KEY="your_google_api_key_here"

# Google Custom Search Engine ID (Get from https://cse.google.com/cse/all)
GOOGLE_CSE_ID="your_google_cse_id_here"

# HaveIBeenPwned API Key (Get from https://haveibeenpwned.com/API/Key)
HAVEIBEENPWNED_API_KEY="your_haveibeenpwned_api_key_here"

# File paths (usually default values work fine in Docker)
SCRIPTS_PATH="/app/scripts"
LOGS_PATH="/app/logs"
TEMP_PATH="/tmp/osint"

# Security
CORS_ORIGINS="*"
ENABLE_METRICS=true

# Rate Limiting (adjust based on your API plan)
# VirusTotal Free: 4 requests/minute, 500 requests/day
# VirusTotal Premium: Higher limits
VT_RATE_LIMIT_PER_MINUTE=4
VT_RATE_LIMIT_PER_DAY=500

# HaveIBeenPwned API Rate Limits (varies by subscription)
# Free tier: limited requests per minute
# Paid plans: higher limits
HIBP_RATE_LIMIT_PER_MINUTE=40